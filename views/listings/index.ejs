<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    text-decoration: none;
    color: black;
    font-weight: bold;
  }

  .filter:hover {
    opacity: 1;
    background-color: #f0f0f0;
    transform: scale(1.05);
    text-decoration: none;
    color: black;
  }

  .filter.active {
    opacity: 1;
    background-color: #fe424d;
    color: white;
    text-decoration: none;
  }

  .filter p {
    font-size: 0.8rem;
    margin: 0.3rem 0;
    font-weight: bold;
  }

  .filter i {
    font-size: 1.5rem;
    color: black;
  }

  .filter.active i {
    color: white;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    padding: 1rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
    margin-top: 1.75rem;
  }

  .category-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: #fe424d;
    color: white;
    padding: 0.3rem 0.6rem;
    border-radius: 0.25rem;
    font-size: 0.7rem;
    z-index: 10;
  }

  .category-badge i {
    color: black;
  }

  .listing-card {
    position: relative;
  }
</style>

<div id="filters">
  <a href="/listings/category/trending" class="filter <%= typeof filterCategory !== 'undefined' && filterCategory === 'trending' ? 'active' : '' %>">
    <i class="fa-solid fa-fire"></i>
    <p>Trending</p>
  </a>
  <a href="/listings/category/rooms" class="filter <%= typeof filterCategory !== 'undefined' && filterCategory === 'rooms' ? 'active' : '' %>">
    <i class="fa-solid fa-bed"></i>
    <p>Rooms</p>
  </a>
  <a href="/listings/category/iconic-cities" class="filter <%= typeof filterCategory !== 'undefined' && filterCategory === 'iconic-cities' ? 'active' : '' %>">
    <i class="fa-solid fa-mountain-city"></i>
    <p>Iconic Cities</p>
  </a>
  <a href="/listings/category/mountains" class="filter <%= typeof filterCategory !== 'undefined' && filterCategory === 'mountains' ? 'active' : '' %>">
    <i class="fa-solid fa-mountain"></i>
    <p>Mountains</p>
  </a>
  <a href="/listings/category/castles" class="filter <%= typeof filterCategory !== 'undefined' && filterCategory === 'castles' ? 'active' : '' %>">
    <i class="fa-brands fa-fort-awesome"></i>
    <p>Castles</p>
  </a>
  <a href="/listings/category/amazing-pools" class="filter <%= typeof filterCategory !== 'undefined' && filterCategory === 'amazing-pools' ? 'active' : '' %>">
    <i class="fa-solid fa-person-swimming"></i>
    <p>Amazing Pools</p>
  </a>
  <a href="/listings/category/camping" class="filter <%= typeof filterCategory !== 'undefined' && filterCategory === 'camping' ? 'active' : '' %>">
    <i class="fa-solid fa-campground"></i>
    <p>Camping</p>
  </a>
  <a href="/listings/category/farms" class="filter <%= typeof filterCategory !== 'undefined' && filterCategory === 'farms' ? 'active' : '' %>">
    <i class="fa-solid fa-cow"></i>
    <p>Farms</p>
  </a>
  <a href="/listings/category/arctic" class="filter <%= typeof filterCategory !== 'undefined' && filterCategory === 'arctic' ? 'active' : '' %>">
    <i class="fa-regular fa-snowflake"></i>
    <p>Arctic</p>
  </a>
  <a href="/listings/category/domes" class="filter <%= typeof filterCategory !== 'undefined' && filterCategory === 'domes' ? 'active' : '' %>">
    <i class="fa-solid fa-igloo"></i>
    <p>Domes</p>
  </a>
  <a href="/listings/category/boats" class="filter <%= typeof filterCategory !== 'undefined' && filterCategory === 'boats' ? 'active' : '' %>">
    <i class="fa-solid fa-ship"></i>
    <p>Boats</p>
  </a>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>
<% if(typeof searchQuery !== 'undefined') { %>
  <div class="alert alert-info mt-3 ms-3" role="alert">
    Search results for "<b><%= searchQuery %></b>" - Found <%= allListings.length %> listing(s)
    <a href="/listings" class="ms-2">Clear search</a>
  </div>
<% } %>
<% if(typeof filterCategory !== 'undefined') { %>
  <div class="alert alert-success mt-3 ms-3" role="alert">
    Showing listings in <b><%= categoryDisplay %></b> category - Found <%= allListings.length %> listing(s)
    <a href="/listings" class="ms-2">View all listings</a>
  </div>
<% } %>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings){%>
  <a href="/listings/<%= listing._id%>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="category-badge">
        <% 
          const categoryIcons = {
            'trending': 'fa-fire',
            'rooms': 'fa-bed',
            'iconic-cities': 'fa-mountain-city',
            'mountains': 'fa-mountain',
            'castles': 'fa-fort-awesome',
            'amazing-pools': 'fa-person-swimming',
            'camping': 'fa-campground',
            'farms': 'fa-cow',
            'arctic': 'fa-snowflake',
            'domes': 'fa-igloo',
            'boats': 'fa-ship'
          };
          const icon = categoryIcons[listing.category] || 'fa-tag';
          const displayCategory = listing.category.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ');
        %>
        <i class="fa-solid <%= icon %>"></i> <%= displayCategory %>
      </div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>

  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
