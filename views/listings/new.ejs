<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create new Listing</h3>
    <form
      action="/listings"
      method="POST"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="ADD a catchy title"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please choose a title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          id=""
          placeholder=""
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select name="listing[category]" class="form-control" required>
          <option value="">Select a category</option>
          <option value="trending">Trending</option>
          <option value="rooms">Rooms</option>
          <option value="iconic-cities">Iconic Cities</option>
          <option value="mountains">Mountains</option>
          <option value="castles">Castles</option>
          <option value="amazing-pools">Amazing Pools</option>
          <option value="camping">Camping</option>
          <option value="farms">Farms</option>
          <option value="arctic">Arctic</option>
          <option value="domes">Domes</option>
          <option value="boats">Boats</option>
        </select>
        <div class="invalid-feedback">Please select a category</div>
      </div>

      <div class="mb-3">
        <lable for="image" class="form-label">Upload Listing image</lable>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Upload a photo</div>
      </div>

      <div class="row">
        <div class="mb-3 col-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="text"
            name="listing[price]"
            placeholder="1200"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid price</div>
        </div>

        <div class="mb-3 col-8">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="Jaipur,Rajasthan"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter the location</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="mapEmbed" class="form-label"
          >Map Embed Code (Optional)</label
        >
        <textarea
          name="listing[mapEmbed]"
          placeholder="Paste Google Maps embed iframe src URL here"
          class="form-control"
          rows="2"
        ></textarea>
        <small class="form-text text-muted"
          >e.g., https://www.google.com/maps/embed?pb=...</small
        >
      </div>

      <br />
      <button class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>
